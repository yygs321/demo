<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.EmployeeMapper">

    <select id="findById" resultType="com.example.entity.Employee">
        SELECT id, name FROM employee WHERE id = #{id}
    </select>

    <select id="findAll" resultType="com.example.entity.Employee">
        SELECT id, name FROM employee
    </select>

    <insert id="save" parameterType="com.example.entity.Employee">
        INSERT INTO employee (id, name) VALUES (#{id}, #{name})
    </insert>

    <insert id="saveAll">
        INSERT INTO employee (id, name) VALUES
        <foreach collection="employees" item="employee" separator=",">
            (#{employee.id}, #{employee.name})
        </foreach>
    </insert>

    <update id="update" parameterType="com.example.entity.Employee">
        UPDATE employee SET name = #{name} WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM employee WHERE id = #{id}
    </delete>

    <select id="existsById" resultType="boolean">
        SELECT EXISTS(SELECT 1 FROM employee WHERE id = #{id})
    </select>

    <select id="findExistingIds" resultType="long">
        SELECT id
        FROM employee
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

</mapper>
